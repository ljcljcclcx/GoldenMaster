<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/houseMarketBg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66ffaabb"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/houseMarketOrderPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价格"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/houseMarketOrderQiwei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="气味"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/houseMarketOrderYanse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="颜色"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/houseMarketOrderJiazhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价值"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/houseMarketOrderDuxing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="毒性"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/houseMarketOrderWaiguan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="外观"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/houseMarketOrderCIji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="刺激性"
            android:textSize="12sp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/houseRecyclerMarket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>
</LinearLayout>
